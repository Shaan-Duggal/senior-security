---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  canonicalPath?: string;
  intro?: string;
}

const { title, description, canonicalPath = '/', intro } = Astro.props;
---

<BaseLayout title={title} description={description} canonicalPath={canonicalPath}>
  <section class="section-space">
    <div class="container">
      <header class="panel p-8">
        <h1 class="mt-0 mb-3">{title}</h1>
        {intro && <p class="mb-0 text-xl text-[#2d4f73]">{intro}</p>}
      </header>
      <slot />
    </div>
  </section>
</BaseLayout>
